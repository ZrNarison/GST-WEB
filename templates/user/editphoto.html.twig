{% extends 'base.html.twig' %}
{% block head %}{% endblock  %}
{% block body %}
{% form_theme form _self  %}
<div class="container spacer card col-md-4 col-md-offset-3 mt-4">
    <div class="row">
        <div class="panel-primary bg-secondary fs-2 text-center">Mon Profil</div>
        <div class="float-end mt-2" id="editlogos">
            <div class="float-start">
                <div class="form-group">
                    <label class="control-label">Nom: {{user.pseudo|upper}}</label>
                </div>
            </div>
            <div class="float-end form-group">
                <img src="/img/user/{{user.photo}}" class="rounded" id="oldimage">
            </div>
        </div>
        <div class="panel-body">
            <div class="form-group mt-3">
            {{ include ('base/data.html.twig', {form: form,button:('Valider')} )}}
            </div>
        </div>
    </div>
</div>
{% endblock %}