{% set ap = app.user %}
{% if User | length > 0 %} 
    <table class="table table-striped table table-hover bg-success">
        <thead class="text-white text-uppercase">
            <tr>
                <th >NOM</th>
                <th class="text-center">Photo</th>
                {% for roles in ap.userRole %}
                {% if roles|upper != "ROLE_USER" %}
                <th class=" fs-3 text-center">Action</th>
                {% endif %}
                {% endfor %}
            </tr>
        </thead>
    {% for User in User %}
        <tbody class="bg-white">
            <tr>
                <td>{{User.Pseudo|upper}}</td>
                <td class="text-center"><img src="/img/user/{{User.Photo}}" class="rounded" id="photouser" alt="{{User.Photo}}"></td>
                {% for roles in ap.userRole %}
                {% if roles|upper != "ROLE_USER" %}
                <td class="text-center col-1">
                    <div class="container">
                        {# <a href="{{path ('pnt_info',{'slug':i.id})}}" class="btn btn-sm"><i class="fas fa-print"></i></a>
                        <a href="{{path ('pedit',{'slugpiece':i.slug})}}" class="btn btn-sm "><i class="fa-solid fa-pen-to-square text-success"></i></a>
                        <a href="{{path ('iedit',{'sluginfo':i.info.slug})}}" class="btn btn-sm"><i class="fa-solid fa-pen-to-square text-success"></i></a>
                        <a onclick="return confirm('Vous êtes sûr de la supprimer ?');" href="{{path ('del_info',{'slug':i.slug})}}" class="btn btn-sm"><i class="fas fa-trash text-danger"></i></a>#}
                    </div>
                <td>
                {% endif %}
                {% endfor %}
            </tr>
        </tbody>
    {% endfor %}
    </table>
{% else %}
    <p class="h1 text-center text-danger text-uppercase"><em>Aucune utilisateur enregistrée</em></p>
{% endif %}