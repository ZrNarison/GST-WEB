{% if Box | length > 0 %} 
    <table class="table table-striped table table-hover bg-success">
        <thead class="text-white text-uppercase">
            <tr>
                <th >N°</th>
                <th class="text-center">Loyer</th>
                <th class="text-center">Sécurité</th>
                <th class="text-center">Emplacement</th>
                <th class="text-center text-danger text-uppercase">Action</th>
                {# {% for roles in ap.userRoles %}
                {% if roles|upper == "ROLE_USER" %}#}
                {# {% endif %}
                {% endfor %}  #}
            </tr>
        </thead>
    {# {% set p = app.user %}#}
    {% for box in Box %}
        {# {% if p.Cours == i.Tpi %} #}
        <tbody class="bg-white">
            <tr>
                <td>{{box.Num}}</td>
                <td class="text-center"> {{box.Log|number_format(0, ',', ' ')}}</td>
                <td class="text-center"> {{box.Log|upper}}</td>
                <td class="text-center"> {{box.SitBox.Situe|upper}}</td>
                {# {% for roles in ap.userRoles %}
                {% if roles|upper == "ROLE_USER" %} #}
                <td class="text-center col-2">
                    <div class="container">
                        <a href="{{path ('editbox',{'slugbox':box.id})}}" class="float-start btn btn-sm "><i class="fa-solid fa-pen-to-square text-success"></i></a>
                        <a onclick="return confirm('Vous êtes sûr de la supprimer ?');" href="{{path ('delbox',{'slug':box.id})}}" class="float-end btn btn-sm"><i class="fas fa-trash text-danger"></i></a>
                    </div>
                <td>
                {# {% endif %}
                {% endfor %} #}
            </tr>
        </tbody>
        {# {% endif %} #}
    {% endfor %}
    </table>
{% else %}
    <p class="h1 text-center text-danger text-uppercase"><em>Aucune demande enregistrée</em></p>
{% endif %}